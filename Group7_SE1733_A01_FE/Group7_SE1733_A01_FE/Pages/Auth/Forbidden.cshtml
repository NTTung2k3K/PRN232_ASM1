@page
@model Group7_SE1733_A01_FE.Pages.Auth.ForbiddenModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Group7_SE1733_A01_FE</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Group7_SE1733_A01_FE.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Group7_SE1733_A01_FE</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                        @if (HttpContext.Request.Cookies["Role"] == "0")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/SystemAccount/Index">SystemAccount</a>
                            </li>
                        }

                        @if (HttpContext.Request.Cookies["Role"] == "1")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/NewsArticle/Index">NewsArticle</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Category/Index">Category</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/NewsArticle/History">NewsHistory</a>
                            </li>
                        }

                    </ul>
                </div>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <div class="nav-item text-nowrap">
                        Welcome
                        @if (HttpContext.Request.Cookies["Role"] == "1")
                        {
                            <a asp-page="/SystemAccount/Profile" asp-route-id="@HttpContext.Request.Cookies["Id"]"><strong>@HttpContext.Request.Cookies["Email"]</strong></a>

                        }
                        else
                        {
                            <strong>@HttpContext.Request.Cookies["Email"]</strong>

                        }
                        <a asp-page="/Auth/Logout">Logout</a>

                    </div>
                </div>

            </div>
        </nav>
    </header>
    <div class="container">

        <main role="main" class="pb-3">
            <div class="row text-center">
                <h3 class="text-danger">Forbidden</h3>
                <h4 class="text-danger">You do not have permission to do this function!</h4>
                <div>
                    <a asp-page="/Auth/Login" asp-asp-controller="Account" class="btn btn-primary">Login</a>
                </div>
            </div>
        </main>
    </div>


    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Group7_SE1733_A01_FE - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

</body>
</html>
