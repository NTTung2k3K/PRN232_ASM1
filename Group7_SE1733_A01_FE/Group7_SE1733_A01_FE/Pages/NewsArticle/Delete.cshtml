@page
@model Group7_SE1733_A01_FE.Pages.NewsArticle.DeleteModel

@{
    ViewData["Title"] = "Delete News Article";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>News Article</h4>
    <hr />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.NewsArticle.NewsArticleId)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.NewsArticle.NewsArticleId)</dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NewsArticle.NewsTitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NewsArticle.NewsTitle)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NewsArticle.Headline)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NewsArticle.Headline)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NewsArticle.CreatedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NewsArticle.CreatedDate)
        </dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.NewsArticle.CreatedById)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.NewsArticle.CreatedById)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.NewsArticle.NewsContent)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.NewsArticle.NewsContent)</dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NewsArticle.NewsSource)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NewsArticle.NewsSource)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NewsArticle.Category.CategoryName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NewsArticle.Category.CategoryName)
        </dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.NewsArticle.ModifiedDate)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.NewsArticle.ModifiedDate)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.NewsArticle.UpdatedById)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.NewsArticle.UpdatedById)</dd>

        <dt class="col-sm-2">Tags</dt>
        <dd class="col-sm-10">
            @if (Model.NewsArticle.Tags != null && Model.NewsArticle.Tags.Any())
            {
                <ul>
                    @foreach (var tag in Model.NewsArticle.Tags)
                    {
                        <li><strong>@tag.TagName</strong>: @tag.Note</li>
                    }
                </ul>
            }
            else
            {
                <p>No tags available.</p>
            }
        </dd>


    </dl>

    <form method="post">
        <input type="hidden" asp-for="NewsArticle.NewsArticleId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
