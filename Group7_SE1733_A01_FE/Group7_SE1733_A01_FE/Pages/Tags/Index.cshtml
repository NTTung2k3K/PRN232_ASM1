@page
@model Group7_SE1733_A01_FE.Pages.Tag.IndexModel

@{
    ViewData["Title"] = "Tags";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Tags</h1>

<form method="get">
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label class="control-label">Tag Name</label>
                <input type="text" name="TagName" class="form-control" value="@Request.Query["TagName"]" />
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label class="control-label">Note</label>
                <input type="text" name="Note" class="form-control" value="@Request.Query["Note"]" />
            </div>
        </div>
        <div class="col-md-4 mt-4">
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-success" />
                <a class="btn btn-primary" asp-page="Create">Create New</a>
            </div>
        </div>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Tags[0].TagName)</th>
            <th>@Html.DisplayNameFor(model => model.Tags[0].Note)</th>
            <th></th>
        </tr>
    </thead>
    <tbody id="idTBody">
        @if (Model.Tags != null && Model.Tags.Count > 0)
        {
            foreach (var item in Model.Tags)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.TagName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Note)</td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.TagId">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.TagId">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.TagId">Delete</a>
                    </td>
                </tr>
            }

        }
        else
        {
            <tr>
                <td colspan="3" class="text-center">No tags found.</td>
            </tr>
        }

    </tbody>
</table>

@section Scripts {
    <script src="~/js/paging.js"></script>
}
