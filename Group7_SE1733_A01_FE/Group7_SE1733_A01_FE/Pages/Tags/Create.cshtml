@page
@model Group7_SE1733_A01_FE.Pages.Tag.CreateModel

@{
    ViewData["Title"] = "Create Tag";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Tag</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Tag.TagId" class="control-label"></label>
                <input asp-for="Tag.TagId" class="form-control" />
                <span asp-validation-for="Tag.TagId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Tag.TagName" class="control-label"></label>
                <input asp-for="Tag.TagName" class="form-control" />
                <span asp-validation-for="Tag.TagName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Tag.Note" class="control-label"></label>
                <textarea asp-for="Tag.Note" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Tag.Note" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-page="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
