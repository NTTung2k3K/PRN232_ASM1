@page
@model Group7_SE1733_A01_FE.Pages.Category.EditModel

@{
    ViewData["Title"] = "Edit Category";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit Category</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Category.CategoryName" class="control-label"></label>
                <input asp-for="Category.CategoryName" class="form-control" />
                <span asp-validation-for="Category.CategoryName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Category.CategoryDesciption" class="control-label"></label>
                <textarea asp-for="Category.CategoryDesciption" class="form-control"></textarea>
                <span asp-validation-for="Category.CategoryDesciption" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Category.ParentCategoryId" class="control-label">Parent Category</label>
                <select asp-for="Category.ParentCategoryId"
                        asp-items="Model.AvailableCategories"
                        class="form-control">
                </select>
                <span asp-validation-for="Category.ParentCategoryId" class="text-danger"></span>

                @* Hiển thị thông tin self-reference nếu có *@
                @if (Model.CurrentCategory.ParentCategoryId == Model.Id)
                {
                    <small class="form-text text-warning">
                        <strong>Note:</strong> This category is currently referencing itself as parent.
                    </small>
                }
                @* Hiển thị thông tin parent category hiện tại nếu có *@
                else if (Model.CurrentCategory?.ParentCategory != null)
                {
                    <small class="form-text text-muted">
                        Current parent: @Model.CurrentCategory.ParentCategory.CategoryName
                    </small>
                }
            </div>

            <div class="form-group">
                <label asp-for="Category.IsActive" class="control-label"></label>
                <select asp-for="Category.IsActive" class="form-control">
                    <option value="">-- Select Status --</option>
                    <option value="true">Active</option>
                    <option value="false">Inactive</option>
                </select>
                <span asp-validation-for="Category.IsActive" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}